<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color"
    android:weightSum="1">

    <TextView
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Catagory"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/first_spinner"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:prompt="@string/category_prompt"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@color/secondary_color"
        android:popupBackground="@color/secondary_color"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView2"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:text="Price"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/second_spinner"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:prompt="@string/price_prompt"
        android:popupBackground="@color/secondary_color"
        android:background="@color/secondary_color"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView3"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Maximum Range"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/third_spinner"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:prompt="@string/range_prompt"
        android:popupBackground="@color/secondary_color"
        android:background="@color/secondary_color"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color"
        android:text="Submit"
        android:layout_gravity="center_horizontal" />

</LinearLayout>